    package="millionkids.millionkidseducation">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".menuUI.About" />
        <activity android:name=".menuUI.LearnMore" />
        <activity android:name=".menuUI.Help" />
        <activity android:name=".menuUI.Settings" />
        <activity android:name=".main.MainHomePage" />
        <activity android:name=".Parent.ParentHome" />
        <activity android:name=".Children.ChildrenHome" />
        <activity android:name=".Children.ScenarioOptions" />
        <activity android:name=".Children.GameActivity"></activity>
    </application>

</manifest>