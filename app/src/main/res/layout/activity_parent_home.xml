<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="millionkids.millionkidseducation.Parent.ParentHome"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCurrentContent"
                android:layout_width="match_parent"
                android:layout_height="394dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="30dp"
                android:text="CurrentContent"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="59dp"
                android:layout_marginLeft="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_below="@+id/tvSectionName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout">

                <Button
                    android:id="@+id/bSummary"
                    android:layout_width="98dp"
                    android:layout_height="58dp"
                    android:background="#a7afbc"
                    android:text="Summary"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/bGroomingProcess"
                    android:layout_width="98dp"
                    android:layout_height="58dp"
                    android:background="#a7afbc"
                    android:text="Grooming Process"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/bWarrningSigns"
                    android:layout_width="98dp"
                    android:layout_height="58dp"
                    android:background="#a7afbc"
                    android:text="Warning Signs"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/bPreventMeasure"
                    android:layout_width="105dp"
                    android:layout_height="58dp"
                    android:background="#a7afbc"
                    android:text="Preventative Measure"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSectionName"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Sex Trafficking - Minor"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:headerLayout="@layout/parent_navigation_header"
        app:menu ="@menu/navigation_menu">

        <!--<ExpandableListView-->
            <!--android:id="@+id/elvParentMenu"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent">-->

        <!--</ExpandableListView>-->
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
