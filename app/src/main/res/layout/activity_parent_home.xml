<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="millionkids.millionkidseducation.Parent.ParentHome"
    android:id="@+id/drawerLayout"
    android:background="@color/darkGrayBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <!--android:layout_below="@+id/tvSectionName"-->

                <Button
                    android:id="@+id/bSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginLeft="2dp"
                    android:background="#a7afbc"
                    android:text="Summary"
                    android:textSize="14dp"
                    android:textColor="@color/whiteText"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bGroomingProcess"
                    android:layout_width="86dp"
                    android:layout_height="58dp"
                    android:background="#a7afbc"
                    android:text="Grooming Process"
                    android:layout_marginLeft="2dp"
                    android:textSize="14dp"
                    android:textColor="@color/whiteText"
                    android:textAllCaps="false"/>


                <Button
                    android:id="@+id/bWarrningSigns"
                    android:layout_width="79dp"
                    android:layout_height="58dp"
                    android:background="#a7afbc"
                    android:text="Warning Signs"
                    android:layout_marginLeft="2dp"
                    android:textSize="14dp"
                    android:textColor="@color/whiteText"
                    android:textAllCaps="false"/>


                <Button
                    android:id="@+id/bPreventMeasure"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#a7afbc"
                    android:text="Preventative Measure"
                    android:textSize="14dp"
                    android:textColor="@color/whiteText"
                    android:textAllCaps="false"/>


            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/tvSectionName"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="33dp"-->
                <!--android:text="Sex Trafficking - Minor"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:textSize="24sp"-->
                <!--android:textStyle="bold" />-->
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:headerLayout="@layout/parent_navigation_header"
        app:menu ="@menu/navigation_menu">

        <!--<ExpandableListView-->
            <!--android:id="@+id/elvParentMenu"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent">-->

        <!--</ExpandableListView>-->
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
