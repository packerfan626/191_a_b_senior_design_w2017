<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutLearnMore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="millionkids.millionkidseducation.menuUI.LearnMore"
    android:background="@color/globeBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLearnMorePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvLearnMoreContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvLearnMorePage"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="30dp"
            android:autoLink="web"
            android:textColor="@color/whiteText"
            android:layout_marginBottom="10dp"/>
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="2dp"-->

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationViewDefault"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:headerLayout="@layout/parent_navigation_header"
        app:menu ="@menu/default_navigation_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
