<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:background="@drawable/ui_globe_only_150dpi"
    tools:context="millionkids.millionkidseducation.main.MainHomePage"
    android:id="@+id/drawerLayoutMain">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bParent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <ImageButton
                android:id="@+id/bParent"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="307dp"

                android:layout_height="76dp"
                android:layout_alignStart="@+id/bChild"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/adults_button_blue_75dpi"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toTopOf="@+id/bChild" />

            <ImageButton
                android:id="@+id/bChild"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="307dp"

                android:layout_height="76dp"
                android:layout_below="@+id/bParent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="39dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/kids_button_blue_75dpi"
                app:layout_constraintHorizontal_bias="0.508" />

            <ImageView
                android:id="@+id/ivKids"
                android:layout_width="73dp"
                android:layout_height="88dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/bChild"
                app:layout_constraintHorizontal_bias="0.954"
                app:layout_constraintLeft_toLeftOf="@+id/bChild"
                app:layout_constraintRight_toRightOf="@+id/bChild"
                app:layout_constraintTop_toTopOf="@+id/bChild"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/kids_button_characters" />

            <ImageView
                android:id="@+id/ivAdult"
                android:layout_width="71dp"
                android:layout_height="111dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/bParent"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintLeft_toLeftOf="@+id/bParent"
                app:layout_constraintRight_toRightOf="@+id/bParent"
                app:srcCompat="@drawable/adult_button_characters" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="313dp"
                android:layout_height="111dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="49dp"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_text_75dpi" />
        </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationViewDefaultMain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:headerLayout="@layout/navigation_header"
        app:menu ="@menu/default_navigation_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
