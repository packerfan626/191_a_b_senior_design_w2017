<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="millionkids.millionkidseducation.main.MainHomePage"
    android:id="@+id/drawerLayoutMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="149dp">

            <Button
                android:id="@+id/bParent"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Parent" />

            <Button
                android:id="@+id/bChild"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Child" />
        </GridLayout>
    </RelativeLayout>

    <TextView
        android:text="Welcome to Million Kids Educational"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tvWelcomHomePage"
        android:textSize="24sp"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationViewDefaultMain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:headerLayout="@layout/parent_navigation_header"
        app:menu ="@menu/default_navigation_menu">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
